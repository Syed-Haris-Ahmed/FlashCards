<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Background color -->
            <corners android:radius="0dp" /> <!-- Adjust the radius to control corner rounding -->
        </shape>
    </item>
    <item android:top="1dp"> <!-- Reduce the top offset to make the shadow smaller -->
        <shape android:shape="rectangle">
            <solid android:color="@color/app_dark" /> <!-- Shadow color -->
            <corners android:radius="0dp" /> <!-- Adjust the radius to control corner rounding -->
        </shape>
    </item>
</layer-list>
