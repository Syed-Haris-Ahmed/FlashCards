<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_dark" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="120sp"
        android:layout_marginBottom="120sp"
        android:layout_marginEnd="20sp"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.flashcards.cards.FlashCardButtons
            android:id="@+id/card"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="300sp"
            android:layout_height="200sp"
            android:autoSizeMaxTextSize="35sp"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/ic_rounded_button"
            android:ellipsize="end"
            android:letterSpacing="0.015"
            android:paddingStart="10sp"
            android:paddingTop="30sp"
            android:paddingEnd="10sp"
            android:paddingBottom="40sp"
            android:text="@string/example"
            app:frontText="Front Text"
            app:backText="BackText"
            app:description="Description"
            android:textAllCaps="false"
            android:textColor="@color/app_light"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/edit_card_button"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="bottom|end"
            android:elevation="20dp"
            android:background="@drawable/ic_edit_button" />

        <Button
            android:id="@+id/descriptionViewButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom|center"
            android:elevation="20dp"
            android:background="@drawable/ic_notes_button" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="bottom|start"
            android:elevation="20dp"
            android:background="@drawable/ic_delete_button" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
